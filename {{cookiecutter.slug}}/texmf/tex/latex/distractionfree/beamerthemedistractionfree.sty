\ProvidesPackage{beamerthemedistractionfree}[v0.0.0]

\mode<presentation>

\DeclareOptionBeamer{showmaxslides}{\PassOptionsToPackage{showmaxslides}{beamerouterthemedistractionfree}}
\DeclareOptionBeamer{pageprefix}{\PassOptionsToPackage{pageprefix=#1}{beamerouterthemedistractionfree}}
\DeclareOptionBeamer{customfont}{\PassOptionsToPackage{customfont}{beamerfontthemedistractionfree}}
\DeclareOptionBeamer{noto}{\PassOptionsToPackage{noto}{beamerfontthemedistractionfree}}

\ProcessOptionsBeamer

% Settings
\usefonttheme{distractionfree}
\usecolortheme{distractionfree}
\useoutertheme{distractionfree}
\useinnertheme{distractionfree}

\setbeamertemplate{navigation symbols}{}%
\beamerdefaultoverlayspecification{}

\def\maketitle{%
	{%Set beamer template only works for the following frames.
	% Would need a different way to support calling \maketitle in
	% a frame environment
		\setbeamertemplate{footline}{}%
		\setbeamertemplate{frametitle}[largetitle]%

		\begin{frame}[noframenumbering]%
			\titlepage%
		\end{frame}%
	}
}


\mode<all>
